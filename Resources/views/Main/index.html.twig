{% extends "DellaertACCOBooklistBundle::layout.html.twig" %}

{% block extrajs %}
	<script type="text/javascript">
		{% include 'DellaertACCOBooklistBundle:js:vakkenlijst.js.twig' %}
	</script>
{% endblock %}

{% block content %}
	<h1>{% trans %}literaturelist{% endtrans %}</h1>
	<form method="POST">
		<div class="form-row">
			<select class="form_dropdown" name="faculty" id="faculties" size="1">
				<option value="-1">{% trans %}patience{% endtrans %}</option>
			</select>
		</div>
		<div class="form-row">
			<select class="form_dropdown" name="level" id="levels" size="1">
				<option value="-1">{% trans %}patience{% endtrans %}</option>
			</select>
		</div>
		<div class="form-row">
			<select class="form_dropdown" name="study" id="studies" size="1">
				<option value="-1">{% trans %}patience{% endtrans %}</option>
			</select>
		</div>
		<div class="form-row">
			<select class="form_dropdown" name="program" id="programs" size="1">
				<option value="-1">{% trans %}patience{% endtrans %}</option>
			</select>
		</div>
		<div class="form-row">
			<select class="form_dropdown" name="stage" id="stages" size="1">
				<option value="-1">{% trans %}patience{% endtrans %}</option>
			</select>
		</div>
	</form>
	<div class="hr"> </div>
	<div id="courses"></div>
	<div id="coursestest">
		<div class="accordion" id="coursesaccordion">
			<h2>BI: Gemeenschappelijke basis</h2>
			<div class="inner show">
				<h3>Algemeen vormende opleidingsonderdelen</h3>
				<div class="inner show">
					<table style="border: 0px;" cellpadding="0" cellspacing="0">
						<tr>
							<td>Testvak</td>
							<td>Verplicht</td>
						</tr>
					</table> 
					<h4>Religie, zingeving en levensbeschouwing</h4>
					<div class="inner show">
						<table style="border: 0px;" cellpadding="0" cellspacing="0">
							<tr>
								<td>Testvak 2</td>
								<td>Verplicht</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
			<h2>BII: Hoofdrichtingen</h2>
			<div class="inner show">
				<h3>Hoofdrichting Bouwkunde</h3>
				<div class="inner show">
					<h4>Opleidingsonderdelen bouwkunde</h4>
					<div class="inner show">
						<table style="border: 0px;" cellpadding="0" cellspacing="0">
							<tr>
								<td>Testvak 3</td>
								<td>Verplicht</td>
							</tr>
						</table>
					</div>
				</div>
				<h3>Hoofdrichting Chemie</h3>
				<div class="inner show">
					<h4>Opleidingsonderdelen chemie</h4>
					<div class="inner show">
						<table style="border: 0px;" cellpadding="0" cellspacing="0">
							<tr>
								<td>Testvak 4</td>
								<td>Verplicht</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
